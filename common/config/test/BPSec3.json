{
    "bpsecConfigName": "my BPSec Config",
    "policyRules": [
        {
            "desc": " Confidentiality acceptor rule",
            "securityPolicyRuleId": 1,
            "securityRole": "acceptor",
            "securitySource": "ipn:1.*",
