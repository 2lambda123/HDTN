            "finalDest": "ipn:*",
            "securityTargetBlockType": "Payload",
            "securityService": "confidentiality",
            "securityContextId": "BCB-AES-GCM",
            "securityFailureEventSetReference": "default_confidentiality",
            "securityContextParams": [
                {
                    "paramName": "aes_variant",
                    "value": "3"
                },
                {
                    "paramName": "iv_generated_size",
                    "value": "12"
                },
                {
                    "paramName": "key",
                    "value": "dtnkey"
                },
                {
                    "paramName": "crc",
                    "value": "none"
                },
                {
                    "paramName": "aad_scoped_mask",
                    "value": "4"
                }
            ]
        }
    ],
    "securityFailureEventSets": [
        {
            "name": "default_confidentiality",
            "desc": "default bcb confidentiality security operations event set",
            "securityOperationEvents": [
                {
                    "eventId": "security_operation_missing_at_acceptor",
                    "actions": [
                        "remove_security_operation_target_block"
                    ]
                }
            ]
        }
    ]
}
