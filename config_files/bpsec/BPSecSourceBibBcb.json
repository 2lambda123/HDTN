                {
                    "paramName": "aes_variant",
                    "value": "A256GCM"
                },
                {    "paramName": "iv_generated_size",
                     "value":   "12Bytes"
		},
                {
                    "paramName": "key",
                    "value": "C:\/keys\/encryptionKey"
                },
                {
                    "paramName": "crc",
                    "value": "NONE"
		},
                {
                    "paramName": "aad_scoped_mask",
                    "value": "ALL_FLAGS_SET"
                }
            ]
        }, 
	{
            "desc": " Integrity source rule",
            "securityPolicyRuleId": 2,
            "securityRole": "source",
            "securitySource": "ipn:1.*",
             "bundleSource": [
                "ipn:1.*"
            ],
            "finalDest": [               
                "ipn:*"
            ],
            "securityTargetBlockType": "Payload",
            "securityService": "integrity",
